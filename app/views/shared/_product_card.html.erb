
 <%= link_to product_path(product), class: "mt-5" do  %>
  <div class="col-lg-4 h-100">
    <div class="card h-100" style="width: 32rem;">
      <div class="card-body">
        <h3> <%= product.designer.name %> </h3>
        <h2> <%= product.name %> </h2>
        <p class="card-text"> <%= product.description %> </p>
      </div>
      <%= cl_image_tag product.photos.first.key, class: "card-img-top" %>
      <div class="d-flex justify-content-between align-items-center pl-3 pr-3 pb-2 pt-2">
        <p class="mb-0"> <%= product.price %>,- â‚¬ </p>
        <p class="mb-0"><%= "Available size" %> </p>
        <%= link_to product_orders_products_path(product), method: :post do%>
        <i class="fas fa-shopping-cart"></i>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>