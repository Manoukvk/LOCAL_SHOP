<div class="container-fluid">
  <div class="d-flex mb-3">
    <div class= "col-lg-4 pl-0">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <%  @product.photos.each do |photo|  %>
          <div class="carousel-item <%= photo == @product.photos.first && "active" %>">
            <%= cl_image_tag photo.key, class: "d-block w-100 pt-0" %>
          </div>
        <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
  </div>
    <div class="card-body-white col-8">
      <p> </p>
        <h1> <%= @product.designer.name %> </h1>
        <p></p>
        <h2> <%= @product.name %> </h2>
        <p></p>
        <p class="card-text"> <%= @product.description %> </p>
        <h3> <%= @product.price %> EUR </h3>
        <div class="form-group col-6 pl-0">
      <label for="inputState"></label>
      <select id="inputState" class="form-control">
        <option selected>Size</option>
        <option>S</option>
        <option>M</option>
        <option>L</option>
      </select>
        <div>
          <%= link_to product_orders_products_path(@product), method: :post do%>
           <button class="btn btn-light btn-add-to-cart w-100" id="add-to-cart-button" type="submit">Add to my cart</button>
           <% end %>
           <p></p>
         </div>
       </div>
       <P></P>
        <p class="pt-5">Ships from Germany | FREE Shipping & Returns within Germany</p>
    </div>
  </div>

  <div class="other-products ml-0 mr-0">
   <p> You  Might  Also  Like ... </p>
  </div>
  <div class= "row mb-4 pb-5">
  <% @random_products.each do |product| %>
  <div class="col-lg-3 col-md-6 col-sm-12 d-flex align-items-stretch">
      <div class="card-other-products " style="width: 18rem;">
        <%= link_to product_path(product) do %>
         <%= cl_image_tag product.photos.first.key, class: "card-img-top card-image-size pt-0" %>
          <div class="card-body-white">
            <div class="card-text pl-0">
              <h3> <%= product.designer.name %> </h3>
              <h2 class="name"> <%= product.name %> </h2>
              <h2 class="price"> <%= product.price %> EUR </h2>
            </div>
          </div>
         <% end %>
        </div>
      </div>
      <% end %>
  </div>

